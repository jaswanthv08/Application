@model ClaimsManagementSystem.Models.UserCredential

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LogIn</h2>


@using (Html.BeginForm("LogIn", "Account"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserCredential</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Role_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Admin  @Html.RadioButtonFor(model => model.Role_Id, 1, new { htmlAttributes = new { @class = "form-control" } })
                Member  @Html.RadioButtonFor(model => model.Role_Id, 2, new { htmlAttributes = new { @class = "form-control" } })
                Agent  @Html.RadioButtonFor(model => model.Role_Id, 3, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Role_Id, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LogIn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Sign Up", "Register", "Account")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
